.dropdown {
  position: absolute;
  inset: auto auto 38px 0;
  display: flex;
  align-items: center;
  gap: 8px;
  padding: 6px;
  overflow: hidden;
  min-width: 80px;
  border-radius: 4px;
  background: #555579;
  box-shadow: 0 1px 20px rgb(0 0 0 / 20%);
  z-index: 1000;
  transition: 0.2s;
  transition-property: opacity, visibility;
}
