.dropdown {
  position: absolute;
  inset: auto auto 38px 0;
  display: flex;
  align-items: center;
  gap: 8px;
  padding: 6px;
  overflow: hidden;
  min-width: 80px;
  border-radius: 4px;
  background: var(--ant-color-bg-base);
  box-shadow: 0 1px 20px rgb(0 0 0 / 20%);
  z-index: var(--z-index-1000);
  transition: 0.2s;
  transition-property: opacity, visibility;
}
